{% set element = note %}

{% if note.blog_name %}
    <div class="note reblog-note post" data-post-id="{{element.id}}">
        {{- create_post_header(request, element) -}}
    </div>

{% else %}
    <div class="note reblog-note post" data-post-id="{{element.id}}">
        {{- create_post_header(request, element) -}}
        {% include 'post/components/body.jinja'  %}
        {% if note.tags %}
            <footer class="post-footer"> {%- include 'post/components/tags.jinja'  -%} </footer>
        {% endif %}
    </div>
{% endif %}