{% extends "post/notes/viewer/template.jinja"%}

{% block notes %}
    {%- for note in notes.notes -%}
        {%- include "post/notes/note/reply.jinja" -%}
    {%- endfor -%}
{% endblock %}

{% block paging %}
    <a class="secondary next-page button" href="/{{post_url | e}}?note_viewer=replies&after={{(notes.notes | last).reply_id}}">{{translate(request.ctx.language, "pagination_next_page")}}</a>
{% endblock %}